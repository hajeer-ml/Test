<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/spsd">


    <EditText
        android:id="@+id/reg_email"
        android:background="@drawable/customedittxt"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:layout_marginStart="20dp"
        
        android:hint="Email"
        android:drawableLeft="@drawable/mail"
        android:paddingLeft="15dp"
        android:drawablePadding="10dp"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/reg_password"
        android:background="@drawable/customedittxt"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/reg_email"
        android:hint="Password"
        android:drawableLeft="@drawable/pass"
        android:paddingLeft="15dp"
        android:drawablePadding="10dp"
        android:inputType="textPassword"
       />
    <EditText
        android:id="@+id/reg_name"
        android:background="@drawable/customedittxt"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/reg_password"
        android:hint="Name"
        android:drawableLeft="@drawable/acco"
        android:paddingLeft="15dp"
        android:drawablePadding="10dp"
        android:inputType="textPersonName"
        />
    <EditText
        android:id="@+id/reg_number"
        android:background="@drawable/customedittxt"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/reg_name"
        android:hint="Phone Number"
        android:drawableLeft="@drawable/phon"
        android:paddingLeft="15dp"
        android:drawablePadding="10dp"
        android:inputType="text|number"
        />



</RelativeLayout>